<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/notice_bar_width"
    android:layout_height="@dimen/notice_bar_height"
    app:cardUseCompatPadding="true"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/notice_board_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minLines="2"
            android:maxLines="2"
            tools:text="Dziaba dziaba pies szuka sąsiada"/>

        <TextView
            android:id="@+id/notice_board_localisation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            tools:text="Wrocław, 43-300"/>

        <TextView
            android:id="@+id/notice_board_animals"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            tools:text="2 x Pies, 2 x kot, 1 x osioł"/>

        <TextView
            android:id="@+id/notice_board_deadlines"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            tools:text="21.11.21, 21.12.21"/>

    </LinearLayout>


</androidx.cardview.widget.CardView>